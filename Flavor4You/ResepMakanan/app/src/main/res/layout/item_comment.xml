<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/rowContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Garis vertikal untuk reply (style reddit) -->
        <View
            android:id="@+id/replyBar"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#DDCCCCCC"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contentWrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama User"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-11-24 15:00:00"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <!-- Rating: hanya untuk comment utama, reply akan di-hide -->
                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:isIndicator="true" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi komentar..."
                android:layout_marginTop="4dp"
                android:textSize="13sp" />

            <!-- bar like / dislike / reply -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11sp"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_thumb_up_24" />

                <TextView
                    android:id="@+id/tvDislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnDislike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_thumb_down_24" />

                <TextView
                    android:id="@+id/btnReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textSize="11sp"
                    android:textColor="#5E35B1"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Show / Hide replies (hanya parent yang punya replyCount > 0) -->
            <TextView
                android:id="@+id/tvToggleReplies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show replies (0)"
                android:textSize="11sp"
                android:textColor="#5E35B1"
                android:layout_marginTop="2dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
