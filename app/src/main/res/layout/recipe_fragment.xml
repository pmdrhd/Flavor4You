<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkGreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_shape"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/recipeFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/special_elite"
                    android:text="MARTABAK MANIS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="18dp"
                        app:cardBackgroundColor="#dcd8c9"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="6dp"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/cooktime_icon"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cooking Time"
                                android:textSize="10dp"
                                android:textColor="#696667"
                                android:fontFamily="@font/poppins"
                                />
                            <TextView
                                android:id="@+id/recipeCookTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 mins"
                                android:textSize="10dp"
                                android:fontFamily="@font/poppins"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="18dp"
                        app:cardBackgroundColor="#dcd8c9"
                        android:layout_marginHorizontal="12dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="6dp"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/portion_icon"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Servings"
                                android:textSize="10dp"
                                android:textColor="#696667"
                                android:fontFamily="@font/poppins"
                                />
                            <TextView
                                android:id="@+id/recipeServings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 people"
                                android:textSize="10dp"
                                android:fontFamily="@font/poppins"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="18dp"
                        app:cardBackgroundColor="#dcd8c9"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="6dp"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/star_icon"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ratings"
                                android:textSize="10dp"
                                android:textColor="#696667"
                                android:fontFamily="@font/poppins"
                                />
                            <TextView
                                android:id="@+id/recipeRatings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0"
                                android:textSize="10dp"
                                android:fontFamily="@font/poppins"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:id="@+id/recipeText"
                    android:padding="8dp"
                    android:text="Bahan:\n• 500 gram tepung terigu\n• 600 ml air hangat\n• 30 gram margarin cair\n• 2 butir telur\n• 125 gram gula pasir\n• 1,5 sdt ragi instan\n• 1 sdt baking powder\n• 1/4 sdt pasta vanili\n• 1/2 sdt garam\n• Margarine untuk olesan\n• Meses cokelat dan kacang tanah sangrai untuk taburanBahan:\n• 500 gram tepung terigu\n• 600 ml air hangat\n• 30 gram margarin cair\n• 2 butir telur\n• 125 gram gula pasir\n• 1,5 sdt ragi instan\n• 1 sdt baking powder\n• 1/4 sdt pasta vanili\n• 1/2 sdt garam\n• Margarine untuk olesan\n• Meses cokelat dan kacang tanah sangrai untuk taburan"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>